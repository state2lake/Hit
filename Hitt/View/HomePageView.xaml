<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Hitt.View.HomePageView">

    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="5,25,5,0">
                <StackLayout>
                    <Label Text="Quick Workouts:" FontAttributes="Bold" FontSize="Large"/>
                    <CarouselView HeightRequest="250">
                        <CarouselView.ItemTemplate>
                            <DataTemplate>
                                <StackLayout>
                                    <Frame>
                                    </Frame>
                                </StackLayout>
                            </DataTemplate>
                        </CarouselView.ItemTemplate>
                    </CarouselView>
                </StackLayout>
                 <BoxView   VerticalOptions="Center"
                           HorizontalOptions="FillAndExpand"
                           HeightRequest="1"
                           Color="#5b5d68"/>
                <StackLayout>
                    <Label Text="For You:" FontAttributes="Bold" FontSize="Large" />
                    <CarouselView HeightRequest="250">
                        <CarouselView.ItemTemplate>
                            <DataTemplate>
                                <StackLayout>
                                    <Frame>
                                    </Frame>
                                </StackLayout>
                            </DataTemplate>
                        </CarouselView.ItemTemplate>
                    </CarouselView>
                </StackLayout>
                <BoxView   VerticalOptions="Center"
                           HorizontalOptions="FillAndExpand"
                           HeightRequest="1"
                           Color="#5b5d68"/>
                <StackLayout>
                    <Label Text="Recently Watched:" FontAttributes="Bold" FontSize="Large" />
                    <CarouselView  HeightRequest="250">
                        <CarouselView.ItemTemplate>
                            <DataTemplate>
                                <StackLayout>
                                    <Frame>
                                    </Frame>
                                </StackLayout>
                            </DataTemplate>
                        </CarouselView.ItemTemplate>
                    </CarouselView>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>

